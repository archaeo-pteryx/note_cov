@article{nishimichi:2012fk,
	Abstract = {The large-scale clustering pattern of biased tracers is
		  known to be a powerful probe of the non-Gaussianities in
		  the primordial fluctuations. The so-called scale-dependent
		  bias has been reported in various type of models of
		  primordial non-Gaussianities. We focus on local-type
