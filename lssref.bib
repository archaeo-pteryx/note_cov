@article{desjacques10c,
	Abstract = {Models of galaxy and halo clustering commonly assume that
		  the tracers can be treated as a continuous field locally
		  biased with respect to the underlying mass distribution. In
		  the peak model pioneered by Bardeen et al. [Astrophys. J.
		  304, 15 (1986)ASJOAB0004-637X10.1086/164143], one considers
