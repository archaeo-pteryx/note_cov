@article{peacock01,
	Abstract = {The large-scale structure in the distribution of galaxies
		  is thought to arise from the gravitational instability of
		  small fluctuations in the initial density field of the
		  Universe. A key test of this hypothesis is that forming
		  superclusters of galaxies should generate a systematic
